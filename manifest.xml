<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:type="MailApp">
  <Id>059d2722-9fdd-41bc-9bd9-9b4b08286f48</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>PTAI</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="PTAI Metrics Approver"/>
  <Description DefaultValue="Approve and send emails and meeting requests."/>
  <SupportUrl DefaultValue="https://localhost:3000/"/>
  <IconUrl DefaultValue="https://localhost:3000/images/icon-80.png"/>
  <HighResolutionIconUrl DefaultValue="https://localhost:3000/images/icon-80.png"/>
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets DefaultMinVersion="1.8">
      <Set Name="Mailbox" MinVersion="1.8"/>
    </Sets>
  </Requirements>
  <FormSettings>
    <DesktopFormFactor>
      <FunctionFile resid="Commands.Url"/>
    </DesktopFormFactor>
  </FormSettings>
  <Permissions>ReadWriteMailbox</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message"/>
    <Rule xsi:type="ItemIs" ItemType="MeetingRequest"/>
  </Rule>
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides"
                   xsi:type="VersionOverridesV1_0">
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1"
                     xsi:type="VersionOverridesV1_1">
      <Resources>
        <bt:Images xmlns:bt="http://schemas.microsoft.com/office/2016/manifest">
          <bt:Image id="Icon.16x16" DefaultValue="https://localhost:3000/images/icon-16.png"/>
          <bt:Image id="Icon.32x32" DefaultValue="https://localhost:3000/images/icon-32.png"/>
          <bt:Image id="Icon.80x80" DefaultValue="https://localhost:3000/images/icon-80.png"/>
        </bt:Images>
        <bt:Urls xmlns:bt="http://schemas.microsoft.com/office/2016/manifest">
          <bt:Url id="Commands.Url" DefaultValue="https://localhost:3000/command.html"/>
          <bt:Url id="Taskpane.Url" DefaultValue="https://localhost:3000/taskpane.html"/>
        </bt:Urls>
        <bt:Strings xmlns:bt="http://schemas.microsoft.com/office/2016/manifest">
          <bt:String id="Group.Label" DefaultValue="PTAI Metrics Approver"/>
          <bt:String id="TaskpaneButton.Label" DefaultValue="Approve and Send"/>
          <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Opens the PTAI Metrics Approver task pane."/>
        </bt:Strings>
      </Resources>
      <Hosts>
        <Host xsi:type="MailHost">
          <DesktopFormFactor>
            <ExtensionPoint xsi:type="MessageReadCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="msgReadGroup">
                  <Label resid="Group.Label"/>
                  <Control xsi:type="Button" id="msgReadOpenPaneButton">
                    <Label resid="TaskpaneButton.Label"/>
                    <Supertip>
                      <Title resid="TaskpaneButton.Label"/>
                      <Description resid="TaskpaneButton.Tooltip"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="Icon.16x16"/>
                      <bt:Image size="32" resid="Icon.32x32"/>
                      <bt:Image size="80" resid="Icon.80x80"/>
                    </Icon>
                    <Action xsi:type="ShowTaskpane">
                      <SourceLocation resid="Taskpane.Url"/>
                    </Action>
                  </Control>
                </Group>
              </OfficeTab>
            </ExtensionPoint>
          </DesktopFormFactor>
        </Host>
      </Hosts>
    </VersionOverrides>
  </VersionOverrides>
</OfficeApp>
