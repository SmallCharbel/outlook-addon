<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp 
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xsi:type="MailApp">
  <Id>059d2722-9fdd-41bc-9bd9-9b4b08286f48</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>PTAI</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="PTAI Metrics Approver"/>
  <Description DefaultValue="Approve and send emails and meeting requests."/>
  <IconUrl DefaultValue="https://via.placeholder.com/80.png"/>
  <HighResolutionIconUrl DefaultValue="https://via.placeholder.com/80.png"/>
  <SupportUrl DefaultValue="https://SmallCharbel.github.io/outlook-addon/"/>
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets DefaultMinVersion="1.8">
      <Set Name="Mailbox" MinVersion="1.8"/>
    </Sets>
  </Requirements>
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://SmallCharbel.github.io/outlook-addon/command.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  <Permissions>ReadWriteMailbox</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
    <Rule xsi:type="ItemIs" ItemType="Appointment" FormType="Read"/>
  </Rule>
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">
      <Requirements>
        <bt:Sets DefaultMinVersion="1.3">
          <bt:Set Name="Mailbox" />
        </bt:Sets>
      </Requirements>
      <Hosts>
        <Host xsi:type="MailHost">
          <DesktopFormFactor>
            <FunctionFile resid="functionFile" />
            <ExtensionPoint xsi:type="MessageReadCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="msgReadGroup">
                  <Label resid="groupLabel"/>
                  <Control xsi:type="Button" id="forwardEmailButton">
                    <Label resid="forwardButtonLabel"/>
                    <Supertip>
                      <Title resid="forwardButtonTitle"/>
                      <Description resid="forwardButtonDesc"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="icon16"/>
                      <bt:Image size="32" resid="icon32"/>
                      <bt:Image size="80" resid="icon80"/>
                    </Icon>
                    <Action xsi:type="ExecuteFunction">
                      <FunctionName>forwardEmailWithAttachments</FunctionName>
                    </Action>
                  </Control>
                  <Control xsi:type="Button" id="openTaskpane">
                    <Label resid="openTaskpaneLabel"/>
                    <Supertip>
                      <Title resid="openTaskpaneTitle"/>
                      <Description resid="openTaskpaneDesc"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="icon16"/>
                      <bt:Image size="32" resid="icon32"/>
                      <bt:Image size="80" resid="icon80"/>
                    </Icon>
                    <Action xsi:type="ShowTaskpane">
                      <SourceLocation resid="taskpaneUrl"/>
                    </Action>
                  </Control>
                </Group>
              </OfficeTab>
            </ExtensionPoint>
          </DesktopFormFactor>
        </Host>
      </Hosts>
      <Resources>
        <bt:Images>
          <bt:Image id="icon16" DefaultValue="https://smallcharbel.github.io/assets/app-logo-16.png"/>
          <bt:Image id="icon32" DefaultValue="https://smallcharbel.github.io/assets/app-logo-32.png"/>
          <bt:Image id="icon80" DefaultValue="https://smallcharbel.github.io/assets/app-logo-80.png"/>
        </bt:Images>
        <bt:Urls>
          <bt:Url id="functionFile" DefaultValue="https://smallcharbel.github.io/function-file.html"/>
          <bt:Url id="taskpaneUrl" DefaultValue="https://smallcharbel.github.io/taskpane.html"/>
        </bt:Urls>
        <bt:ShortStrings>
          <bt:String id="groupLabel" DefaultValue="Email Forwarding"/>
          <bt:String id="forwardButtonLabel" DefaultValue="Forward with Attachments"/>
          <bt:String id="forwardButtonTitle" DefaultValue="Forward with Attachments"/>
          <bt:String id="openTaskpaneLabel" DefaultValue="More Options"/>
          <bt:String id="openTaskpaneTitle" DefaultValue="Open Add-in"/>
        </bt:ShortStrings>
        <bt:LongStrings>
          <bt:String id="forwardButtonDesc" DefaultValue="Forward the email with all attachments preserved."/>
          <bt:String id="openTaskpaneDesc" DefaultValue="Open the Email Forwarding add-in for more options."/>
        </bt:LongStrings>
      </Resources>
    </VersionOverrides>
  </VersionOverrides>
</OfficeApp>